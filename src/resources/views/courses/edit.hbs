<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
{{!-- express.urlencoded() can't parse those input-fields which lack name attribute --}}
    <form  class = "mt-4" method = "POST" action = "/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input name = 'name' type="text" value = "{{course.name}}" class="form-control" id="name" >
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea name = 'description' class="form-control" id="description" >{{course.description}} </textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input name = 'videoId'type="text" value = "{{course.videoId}}" class="form-control" id="videoId" >
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input name = 'level'type="text" value = "{{course.level}}" class="form-control" id="level" >
        </div>
        
        <button  type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>